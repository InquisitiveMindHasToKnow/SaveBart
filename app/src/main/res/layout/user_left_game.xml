<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/you_lost_header_textview"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="Duuuude! You really just left me like that?!"
            android:textColor="@color/low_guesses_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bart_with_slingshot_icon"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/bartwithslingshot" />


        <TextView
            android:id="@+id/user_left_game_message_textview"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="The nerve of you."
            android:textColor="@color/low_guesses_color" />

        <TextView
            android:id="@+id/user_left_game_message_two_textview"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:text="Play again and save me!"
            android:textColor="@color/low_guesses_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/user_left_game_play_again_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button_corners"
                android:fontFamily="@font/autour_one"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Play Again"
                android:textAllCaps="false"
                android:textColor="@color/low_guesses_color" />

        </androidx.appcompat.widget.LinearLayoutCompat>
</layout>